<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session_1_Dennis_Hilfinger.UserPage"
             Title="UserPage">
    <VerticalStackLayout Spacing="20">
        <Button Text="Exit"
                Clicked="Exit"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="50"
                WidthRequest="150"/>
        <Label x:Name="WelcomeLabel"
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <Label x:Name="InfoLabel"
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
        <CollectionView x:Name="LoginGrid"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        HeightRequest="400"
                        WidthRequest="700">
            <CollectionView.Header>
                <Grid ColumnDefinitions="*, *, *, *, 2*">
                    <Label Text="Date" Grid.Column="0" FontAttributes="Bold"/>
                    <Label Text="Login Time" Grid.Column="1" FontAttributes="Bold"/>
                    <Label Text="Logout Time" Grid.Column="2" FontAttributes="Bold"/>
                    <Label Text="Time Spent" Grid.Column="3" FontAttributes="Bold"/>
                    <Label Text="Error Message" Grid.Column="4" FontAttributes="Bold"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, *, *, *, 2*">
                        <Label Text="{Binding Date}" Grid.Column="0"/>
                        <Label Text="{Binding LoginTime}" Grid.Column="1"/>
                        <Label Text="{Binding LogoutTime}" Grid.Column="2"/>
                        <Label Text="{Binding TimeSpent}" Grid.Column="3"/>
                        <Label Text="{Binding ErrorMessage}" Grid.Column="4"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>