<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Session_1_Dennis_Hilfinger.AdminPage"
             Title="AdminPage">
    <ContentPage.Resources>
        <Style x:Key="HightlightedLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="#000000"/>
            <Style.Triggers>
                <DataTrigger
                    TargetType="Label"
                    Binding="{Binding Active}"
                    Value="False">
                    <Setter Property="TextColor" Value="#FFFFFF"/>
                </DataTrigger>

            </Style.Triggers>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout Spacing="20">

        <HorizontalStackLayout Spacing="50" HorizontalOptions="Center">
            <Button Text="Exit"
                Clicked="Exit"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="50"
                WidthRequest="150"/>
            <Button Text="Add User"
                Clicked="AddUser"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="50"
                WidthRequest="150"/>
        </HorizontalStackLayout>

        <Picker Title="Offices"
                x:Name="OfficePicker"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                SelectedIndexChanged="LoadUsers"/>
        <CollectionView x:Name="UserGrid"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                HeightRequest="300"
                WidthRequest="900"
                SelectionMode="Single"
                SelectionChanged="UserSelected">
            <CollectionView.Header>
                <Grid ColumnDefinitions="*, *, .5*, *, 2*, *">
                    <Label Text="Name" Grid.Column="0" FontAttributes="Bold"/>
                    <Label Text="Last Name" Grid.Column="1" FontAttributes="Bold"/>
                    <Label Text="Age" Grid.Column="2" FontAttributes="Bold"/>
                    <Label Text="Role" Grid.Column="3" FontAttributes="Bold"/>
                    <Label Text="Email address" Grid.Column="4" FontAttributes="Bold"/>
                    <Label Text="Office" Grid.Column="5" FontAttributes="Bold"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, *, .5*, *, 2*, *">
                        
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>

                                    <DataTrigger 
                                        TargetType="Grid"
                                        Binding="{Binding Active}"
                                        Value="False">
                                        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryBlue}"/>
                                    </DataTrigger>
<!--
                                    <DataTrigger 
                                        TargetType="Grid"
                                         Binding="{Binding Active}"
                                         Value="True">
                                        <Setter Property="BackgroundColor" Value="Transparent"/>
                                    </DataTrigger>-->

                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        
                        <Label Text="{Binding Name}" Style="{StaticResource HightlightedLabelStyle}" Grid.Column="0"/>
                        <Label Text="{Binding Lastname}" Style="{StaticResource HightlightedLabelStyle}" Grid.Column="1"/>
                        <Label Text="{Binding Age}" Style="{StaticResource HightlightedLabelStyle}" Grid.Column="2"/>
                        <Label Text="{Binding Role}" Style="{StaticResource HightlightedLabelStyle}" Grid.Column="3"/>
                        <Label Text="{Binding Email}" Style="{StaticResource HightlightedLabelStyle}" Grid.Column="4"/>
                        <Label Text="{Binding Office}" Style="{StaticResource HightlightedLabelStyle}" Grid.Column="5"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Spacing="100" HorizontalOptions="Center">
            <Button Text="Change Role"
                    x:Name="RoleButton"
                    Clicked="ChangeRole"
                    HeightRequest="50"
                    WidthRequest="150"
                    IsEnabled="False"/>
            <Button Text="Suspend/Unsuspend account"
                    x:Name="SuspensionButton"
                    Clicked="ChangeActive"
                    HeightRequest="50"
                    WidthRequest="250"
                    IsEnabled="False"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>